@model NewsPortal.Mvc.Areas.Admin.Models.UserViewModel

<header class="page-header row justify-center">
    <div class="col-md-6 col-lg-8">
        <h1 class="float-left text-center text-md-left">@ViewBag.Dashboard</h1>
    </div>
    <div class="dropdown user-dropdown col-md-6 col-lg-4 text-center text-md-right">
        <a class="btn btn-stripped" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img src="~/img/@Model.User.Picture" alt="profile photo" class="circle float-left profile-photo" width="50" height="auto">
            <div class="username mt-1">
                <h4 class="mb-1">@Model.User.FirstName @Model.User.LastName</h4>
                <h6 class="text-muted">@Model.User.UserName</h6>
            </div>
        </a>
    </div>
    <div class="clear"></div>
</header>