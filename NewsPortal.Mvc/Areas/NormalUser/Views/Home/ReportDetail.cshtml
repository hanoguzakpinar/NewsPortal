@model NewsPortal.Entities.Dtos.ReportDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Haber Detay";
    ViewBag.Dashboard = $"{Model.Report.Title}";
}

<div class="row mt-1">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <p>@Model.Report.Content</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label class="font-weight-bold">Editör:</label> <label>@Model.Report.User.FirstName @Model.Report.User.LastName</label>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Kategori:</label> <label>@Model.Report.Category.Name</label>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Tarih:</label> <label>@Model.Report.Date.ToShortDateString()</label>
                </div>
            </div>
        </div>
    </div>
</div>
