@model NewsPortal.Entities.Dtos.UserLoginDto
@{
    Layout = "_newUserLoginLayout";
    ViewBag.Title = "Giriş Yap";
}

<div class="card-block">
    <h3 class="card-title text-center mt-1">Giriş Yap</h3>
    <div class="divider mt-0"></div>
    <form asp-controller="Auth" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <fieldset>
            <div class="form-group">
                <input class="form-control" placeholder="E-mail" type="email" autofocus="" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Şifre" asp-for="Password" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-1 mb-2">
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                        <label class="custom-control-label" asp-for="RememberMe"></label>
                    </div>
                </div>
            </div>
            <div class="form-group align-items-center justify-content-between mt-4 mb-0">
                <button class="btn btn-primary mb-2" type="submit"><span class="fa fa-sign-in"></span> Giriş Yap</button>
                <a class="btn btn-secondary mb-2 disabled"><span class="fa fa-lock"></span> Şifremi Unuttum</a>
            </div>
        </fieldset>
    </form>
    <div class="card-footer text-center">
        <a class="btn btn-success btn-block text-white" asp-controller="Auth" asp-action="Register"><span class="fa fa-edit"></span> Kayıt Ol</a>
    </div>
</div>