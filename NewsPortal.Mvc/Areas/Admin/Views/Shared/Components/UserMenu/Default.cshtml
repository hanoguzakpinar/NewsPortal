@model NewsPortal.Mvc.Areas.Admin.Models.UserViewModel

<header class="page-header row justify-center">
    <div class="col-md-6 col-lg-8">
        <h1 class="float-left text-center text-md-left">@ViewBag.Dashboard</h1>
    </div>
    <div class="dropdown user-dropdown col-md-6 col-lg-4 text-center text-md-right">
        <a class="btn btn-stripped dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img src="~/img/@Model.User.Picture" alt="profile photo" class="circle float-left profile-photo" width="50" height="auto">
            <div class="username mt-1">
                <h4 class="mb-1">@Model.User.FirstName @Model.User.LastName</h4>
                <h6 class="text-muted">@Model.User.UserName</h6>
            </div>
        </a>
        <div class="dropdown-menu dropdown-menu-right" style="margin-right: 1.5rem;" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangeDetails"><em class="fa fa-user-circle mr-1"></em> Profil Düzenle</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="PasswordChange"><em class="fa fa-lock"></em> Şifre Değiştir</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Auth" asp-action="Logout"><em class="fa fa-power-off mr-1"></em> Çıkış Yap</a>
        </div>
    </div>
    <div class="clear"></div>
</header>