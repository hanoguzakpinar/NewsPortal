@model NewsPortal.Mvc.Areas.Admin.Models.UserWithRolesViewModel

<nav class="sidebar col-xs-12 col-sm-4 col-lg-3 col-xl-2">
    <h1 class="site-title"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><em class="fa fa-trademark"></em> NewsPortal</a></h1>

    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><em class="fa fa-bars"></em></a>
    <ul class="nav nav-pills flex-column sidebar-nav">
        @if (Model.Roles.Any(r => !r.Equals("Normal")))
        {
            <li class="nav-item"><a class="nav-link active" asp-area="Admin" asp-controller="Home" asp-action="Index"><em class="fa fa-dashboard"></em> Dashboard <span class="sr-only">(current)</span></a></li>
            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Report" asp-action="Index"><em class="fa fa-newspaper-o"></em> Haberler</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index"><em class="fa fa-list"></em> Kategoriler</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Comment" asp-action="Index"><em class="fa fa-comment"></em> Yorumlar</a></li>
        }
        @if (Model.Roles.Any(r => r.Equals("SuperAdmin") || r.Equals("User.Read")))
        {
            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index"><em class="fa fa-user"></em> Kullanıcılar</a></li>
        }
        @if (Model.Roles.Any(r => r.Equals("SuperAdmin") || r.Equals("Role.Read")))
        {
            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Role" asp-action="Index"><em class="fa fa-shield"></em> Roller</a></li>
        }
        @if (Model.Roles.Any(r => !r.Equals("Normal")))
        {
            <li class="parent nav-item">
                <a class="nav-link collapsed" data-toggle="collapse" href="#sub-item-1" aria-expanded="false">
                    <em class="fa fa-archive">&nbsp;</em> Arşiv <span data-toggle="collapse" href="#sub-item-1" class="icon pull-right collapsed" aria-expanded="false"><i class="fa fa-plus"></i></span>
                </a>
                <ul class="children collapse" id="sub-item-1" style="">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Report" asp-action="DeletedReports">
                            Haberler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="DeletedCategories">
                            Kategoriler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Comment" asp-action="DeletedComments">
                            Yorumlar
                        </a>
                    </li>
                </ul>
            </li>
        }
    </ul>
    <a asp-area="Admin" asp-controller="Auth" asp-action="Logout" class="logout-button"><em class="fa fa-power-off"></em> Çıkış Yap</a>
</nav>